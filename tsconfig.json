{
  "include": ["src/*.ts","src/*d.ts"],
  "exclude": ["node_modules", "*.json","*.js","*.*ignore"],
  "compilerOptions": {
    "target": "es2021",                          
    "module": "es2022",
    "moduleResolution":"node",                 
    "lib": ["es2021"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks" : true,
    "strictFunctionTypes" :true
  },
  "typeRoots": [
    "@types",
    "./node_modules/@types",
  ],
  "rules": {
    "triple-equals": true,
    "curly": true,
    "strict-boolean-expressions": true,
    "no-unnecessary-condition": true
  }
}